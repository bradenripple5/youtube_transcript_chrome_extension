{
  "manifest_version": 3,
  "name": "YouTube Transcript Helper",
  "version": "1.4.6",
  "description": "Copies a YouTube transcript and (optionally) saves it with a readable filename that includes (with/no timestamps) and the URL.",
  
  "permissions": [
    "downloads",
    "storage",
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://youtube.com/*",
    "https://*.youtube.com/*",
    "https://youtu.be/*"
  ],

  "action": {
    "default_title": "YouTube Transcript",
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

  "icons": {
    "16": "youtube_transcript_icons/icon_16x16.png",
    "32": "youtube_transcript_icons/icon_32x32.png",
    "48": "youtube_transcript_icons/icon_48x48.png",
    "128": "youtube_transcript_icons/icon_128x128.png"
  },

  "content_scripts": [
    {
      "matches": [
        "https://youtube.com/*",
        "https://*.youtube.com/*"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_idle"
    }
  ]
}
